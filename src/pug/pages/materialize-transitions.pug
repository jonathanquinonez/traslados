									<code class=" language-markup">
									  <span class="token tag"><span class="token tag"><span class="token punctuation">&lt;</span>a</span> <span class="token attr-name">href</span><span class="token attr-value"><span class="token punctuation">=</span><span class="token punctuation">"</span>#!<span class="token punctuation">"</span></span> <span class="token attr-name">class</span><span class="token attr-value"><span class="token punctuation">=</span><span class="token punctuation">"</span>btn<span class="token punctuation">"</span></span> <span class="token attr-name">onclick</span><span class="token attr-value"><span class="token punctuation">=</span><span class="token punctuation">"</span>Materialize.showStaggeredList('#staggered-test')<span class="token punctuation">"</span></span><span class="token punctuation">&gt;</span></span>Click Me<span class="token tag"><span class="token tag"><span class="token punctuation">&lt;/</span>a</span><span class="token punctuation">&gt;</span></span>
									        </code>
						.row
							.col.s12
								ul#staggered-test
									li(style='transform: translateX(0px);')
										h4
											a(href='#') List Item
										p This is a description
									li(style='transform: translateX(0px);')
										h4
											a(href='#') List Item
										p This is a description
									li(style='transform: translateX(0px);')
										h4
											a(href='#') List Item
										p This is a description
									li(style='transform: translateX(0px);')
										h4
											a(href='#') List Item
										p This is a description
									li(style='transform: translateX(0px);')
										h4
											a(href='#') List Item
										p This is a description
				// Fade In Image
				.col.s12
					.card-panel
						.row.box-title
							div.col.s12
								h5.content-headline Fade In Image
								p Use this to fade in images. It also animates grayscale and brightness to give it a unique effect.
						.row
							.col.s12
								table.highlight
									thead
										tr
											th Option Name
											th Description
									tbody
										tr
											td SelectorOrEl	
											td The selector or element that the transition targets.
							.col.s12
								a.btn(href='#!', onclick="Materialize.fadeInImage('#image-test')") Click Me
								pre.language-markup.
									<code class=" language-markup">
									  <span class="token tag"><span class="token tag"><span class="token punctuation">&lt;</span>a</span> <span class="token attr-name">href</span><span class="token attr-value"><span class="token punctuation">=</span><span class="token punctuation">"</span>#!<span class="token punctuation">"</span></span> <span class="token attr-name">class</span><span class="token attr-value"><span class="token punctuation">=</span><span class="token punctuation">"</span>btn<span class="token punctuation">"</span></span> <span class="token attr-name">onclick</span><span class="token attr-value"><span class="token punctuation">=</span><span class="token punctuation">"</span>Materialize.fadeInImage('#image-test')<span class="token punctuation">"</span></span><span class="token punctuation">&gt;</span></span>Click Me<span class="token tag"><span class="token tag"><span class="token punctuation">&lt;/</span>a</span><span class="token punctuation">&gt;</span></span>
									        </code>
						.row
							.col.s12
								img#image-test.responsive-img(src='../images/placeholder/1024x915t.jpg',alt="placeholder")
