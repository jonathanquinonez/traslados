							.col.s8.no-mrpd
								h2.left.no-mrpd.white-text
									| 23
									+wi('wi-celsius')
								p.left.sticky-bottom-lr.white-text
									+wi('wi-direction-right')
									+wi('wi-umbrella')
									|98%
							.col.s4
								p.left.white-text
									| 20:19
				.col.s12.m4.l4
					// weather2 : snow-cloud
					.card-panel.gradiant-light-blue-9rl.accent-5
						.row
							.col.s8.no-mrpd
								h6.no-mrpd.white-text India
								p.no-mrpd.white-text Shimla
								
							.col.s4.no-mrpd
								+weather2('snow-cloud','fill-white')
						.row
							.col.s8.no-mrpd
								h2.left.no-mrpd.white-text
									| -06
									+wi('wi-celsius')
								p.left.sticky-bottom-lr.white-text
