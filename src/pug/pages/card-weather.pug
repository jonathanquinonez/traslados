								h2.left.no-mrpd.white-text
									| 24
									+wi('wi-celsius')
								p.left.sticky-bottom-lr.white-text
									+wi('wi-cloud-up')
									|63%
									+wi('wi-direction-up-right')
							.col.s4
								p.left.white-text
									| 20:19
				.col.s12.m4.l4
					// weather2 : sunshine
