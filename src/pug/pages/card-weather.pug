							.col.s2
								+wi('wi-night-alt-snow-thunderstorm font-size-32 white-text vert-center')
							.col.s6.right-align.no-mrpd
								h3.white-text
									+wi('wi-thermometer-internal')
									|-6
									+wi('wi-celsius')
				.col.s12.m6.l4
					.card-panel.gradiant-orange-8lr
						.row.weather-row
							.col.s6.no-mrpd
								h3.white-text
									+wi('wi-thermometer white-text')
									|40
									+wi('wi-celsius white-text')
							.col.s3
								+wi('wi-hot font-size-32 yellow-text vert-center')
							.col.s3.center-align.no-mrpd
								p.white-text 10:25PM
								p.white-text.font-size-8  Mon, 6 Mar
