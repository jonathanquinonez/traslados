								h2.left.no-mrpd.white-text
									| 28
									+wi('wi-celsius')
								p.left.sticky-bottom-lr.white-text
									+wi('wi-wind-beaufort-4')
									+wi('wi-hot')
									|44%
							.col.s4
								p.left.white-text
									| 20:19
				.col.s12.m4.l4
					// weather2 : windy-cloud
					.card-panel.gradiant-grey-2lr
						.row
							.col.s8.no-mrpd
								h6.no-mrpd.white-text Washington
								p.no-mrpd.white-text Distroct of Columbia
								
							.col.s4.no-mrpd
