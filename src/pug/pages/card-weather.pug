							.col.s8.no-mrpd
								h6.no-mrpd.white-text Washington
								p.no-mrpd.white-text Columbia
							.col.s4.no-mrpd
								+weather2('thunder-cloud','fill-white')
						.row
							.col.s8.no-mrpd
								h2.left.no-mrpd.white-text
									| 24
									+wi('wi-celsius')
								p.left.sticky-bottom-lr.white-text
									+wi('wi-direction-right')
									+wi('wi-umbrella')
									|98%
							.col.s4
								p.left.white-text
									| 20:19
				.col.s12.m4.l4
					// weather2 : rain-cloud
					.card-panel.gradiant-blue-grey-1
						.row
							.col.s8.no-mrpd
								h6.no-mrpd.white-text Canada
								p.no-mrpd.white-text British Columbia
							.col.s4.no-mrpd
