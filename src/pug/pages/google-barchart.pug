extends ../layout/defualt-layout.pug
block title
	title Forge :: Materialize Color
block append css
	
block content
	- var mainRoute="chart"
	- var route = 'barChart'
	- var func = 'googleBarChart'
	- var nestedName=""
	- var breadcrumb=[{"link":"index.html","title":"Home"},{"link":"#","title":"Charts"},{"link":"#","title":"Google Bar Chart"}]
	include ../include/header.pug
	main.animated
		.main-header
			.sec-page
				.page-title
					h2 Bar Charts
			.sec-breadcrumb
				+breadcrumb(breadcrumb,'left')
		.main-container
			//- Introductt
			div.row
				.col.s12
					h4.content-headline Google Bar Charts
					p 
						| Google 
						a(href="https://developers.google.com/chart/interactive/docs/gallery/barchart",target="_blank") 
							| bar charts 
						| are rendered in the browser using SVG or VML, whichever is appropriate for the user's browser. 
			// Google Bar-Charts
			.row
				.col.s12
					// Basic Chart
					.card-panel
						.row.box-title
							div.col.s12
								h5.content-headline Basic Chart
						.row
							.col.s12
								#chart_basicBar
				.col.s12
					// Basic Bar-chart With Multiple Series
					.card-panel
						.row.box-title
							div.col.s12
								h5.content-headline Basic Bar-chart With Multiple Series
						.row
							.col.s12
								#chart_MultSeries
			.row
				.col.s12
					// Customizable Axis And Tick Labels
					.card-panel
						.row.box-title
							div.col.s12
								h5.content-headline Customizable Axis And Tick Labels
						.row
							.col.s12
								#chart_axisTickColors
				.col.s12
					// Stacked Bars
					.card-panel
						.row.box-title
							div.col.s12
								h5.content-headline Stacked Bars
						.row
							.col.s12
								#chart_stacked

			.row
				.col.s12
					// Annotations
					.card-panel
						h5.content-headline Annotations
						#chart_annotations
				.col.s12
					// Basic Material Bar-chart
					.card-panel
						h5.content-headline Basic Material Bar-chart
						#chart_material
					
			.row
				.col.s12
					// Dual X-axes
					.card-panel
						h5.content-headline Dual X-axes
						#chart_dualX
				.col.s12
					// Right Y-axis
					.card-panel
						h5.content-headline Right Y-axis
						#chart_rightY
		include ../include/footer.pug
block append scripts
	script(type='text/javascript', src='../plugins/charts/google-chart/loader.js')
	script(type='text/javascript', src='../plugins/charts/google-chart/jsapi.js')
	script(type='text/javascript', src='../plugins/charts/google-chart/barChart.js')
	
	