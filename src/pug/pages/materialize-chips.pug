block append scripts
	script.
		$(document).ready(function(){
			$('.chips').material_chip();
		    $('.chips-initial').material_chip({
		      readOnly: true,
		      data: [{
		        tag: 'Apple',
		      }, {
		        tag: 'Microsoft',
		      }, {
		        tag: 'Google',
		      }]
		    });
		    $('.chips-placeholder').material_chip({
		      placeholder: 'Enter a tag',
		      secondaryPlaceholder: '+Tag',
		    });
		    $('.chips-autocomplete').material_chip({
		      autocompleteOptions: {
		        data: {
		          'Apple': null,
		          'Microsoft': null,
		          'Google': null
		        }
		      },
		    });
		});