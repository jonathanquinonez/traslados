extends ../layout/defualt-layout.pug
block title
	title Forge :: Wave
block append css
	
block content
	- var mainRoute="appearance"
	- var route = 'appJsComponents'
	- var func = 'materializeWaves'
	- var nestedName=""
	- var breadcrumb=[{"link":"index.html","title":"Home"},{"link":"#","title":"Advance UI"},{"link":"#","title":"Wave"}]
	- var pageGeneralDropDown=[{"type":"normal","link":'#',"icon":"account_box","iType":"material","title":"Account"},{"type":"normal","link":'#',"icon":"local_activity","iType":"material","title":"Recent Activities"},{"type":"normal","link":'#',"icon":"mdi-wheelchair-accessibility","iType":"mdi","title":"Accessibility"},{"type":"divider"},{"type":"normal","link":'#',"icon":"settings","iType":"material","title":"All Settings"}]
	include ../include/header.pug
	main.animated
		+dropdownContent('generalDropDown',pageGeneralDropDown)
		// ============================
		// MAIN HEADER
		// ============================
		.main-header
			.sec-page
				.page-title
					h2 Waves
				.page-options
					a(href="#",class="dropdown-button page-opt-dropBtn btn-floating waves-effect waves-set setWave",data-activates='generalDropDown',data-beloworigin="true",data-alignment="right",data-position="bottom",data-constrainwidth="false",data-delay="50",data-gutter="25")
						+mi('perm_data_setting')
					a(href="#",class="waves-effect waves-set page-opt-dropBtn setWave btn-floating")
						+mi('chat_bubble_outline')
			// ============================
			// breadcrumb
			// ============================
			.sec-breadcrumb
				+breadcrumb(breadcrumb,'left')
		// ============================
		// Main container
		// ============================
		.main-container
			//- Intro
			div.row
				.col.s12
					h4.content-headline Wave
					p Waves is an external library that we've included in Materialize to allow us to create the ink effect outlined in Material Design
				//- Applying Waves
				.col.s12
					.card-panel
						.row.box-title
							div.col.s12
								h5.content-headline Applying Waves
								p To put the waves effect on buttons, you just have to put the class <code class='language-markup'>waves-effect</code> on to the buttons. If you want the waves effect to be white instead, add both <code class='language-markup'>waves-effect waves-light</code> as classes.
						.row
							.col.s12
								a(href="#",class="waves-effect waves-light btn") Wave
							.col.s12
								pre.language-markup.
									<code class="  language-markup">
									<span class="token tag"><span class="token tag"><span class="token punctuation">&lt;</span>a</span> <span class="token attr-name">class</span><span class="token attr-value"><span class="token punctuation">=</span><span class="token punctuation">"</span>waves-effect waves-light btn-large<span class="token punctuation">"</span></span> <span class="token attr-name">href</span><span class="token attr-value"><span class="token punctuation">=</span><span class="token punctuation">"</span>#<span class="token punctuation">"</span></span><span class="token punctuation">&gt;</span></span>Wave<span class="token tag"><span class="token tag"><span class="token punctuation">&lt;/</span>a</span><span class="token punctuation">&gt;</span></span>
									</code>
				//- Customization
				.col.s12
					.card-panel
						.row.box-title
							div.col.s12
								h5.content-headline Customization
								p There are several ways to customize waves, you can either use pre-created classes, or you can define your own color by creating a new class.
						.row
							.col.s12.m6
								h5.light Available Colors
								p To use these, just add the corresponding class to your button. Play around with changing the background color of butons and the waves effect to create something cool!
							.col.s12.m6
								h5.light Custom Colors
								p If the color you want is not already available, you can easily make your own waves color by creating a custom CSS class. Take a look at the example below where we add a waves-brown effect
						.row
							.col.s12
								pre.language-markup.
									<code class="  language-markup">
									<span class="token tag"><span class="token tag"><span class="token punctuation">&lt;</span>a</span> <span class="token attr-name">href</span><span class="token attr-value"><span class="token punctuation">=</span><span class="token punctuation">"</span>#!<span class="token punctuation">"</span></span> <span class="token attr-name">class</span><span class="token attr-value"><span class="token punctuation">=</span><span class="token punctuation">"</span>btn waves-effect waves-teal<span class="token punctuation">"</span></span><span class="token punctuation">&gt;</span></span>Send<span class="token tag"><span class="token tag"><span class="token punctuation">&lt;/</span>a</span><span class="token punctuation">&gt;</span></span>
									</code>
								pre.language-css.
									<code class=" language-css">
									<span class="token comment" spellcheck="true">/*
									When creating your CSS selector,
									change "brown" to something of your choosing
									*/</span>
									<span class="token selector">.waves-effect.waves-brown .waves-ripple</span> <span class="token punctuation">{</span>
									 <span class="token comment" spellcheck="true">/* The alpha value allows the text and background color
									 of the button to still show through. */</span>
									  <span class="token property">background-color</span><span class="token punctuation">:</span> <span class="token function">rgba</span><span class="token punctuation">(</span>121, 85, 72, 0.65<span class="token punctuation">)</span><span class="token punctuation">;</span>
									<span class="token punctuation">}</span>
									  </code>
						.row
							.col.s12
								.collection.waves-color-demo
									.collection-item
										| Default
										a.waves-effect.white.grey-text.btn.secondary-content(href='#!') Send
									.collection-item
										code.language-markup waves-light
										a.waves-effect.white.grey-text.waves-light.btn.secondary-content(href='#!') Send
									.collection-item
										code.language-markup waves-primary
										a.waves-effect.white.grey-text.waves-primary.btn.secondary-content(href='#!') Send
									.collection-item
										code.language-markup waves-secondary
										a.waves-effect.white.grey-text.waves-secondary.btn.secondary-content(href='#!') Send
									.collection-item
										code.language-markup waves-red
										a.waves-effect.white.grey-text.waves-red.btn.secondary-content(href='#!') Send
									.collection-item
										code.language-markup waves-yellow
										a.waves-effect.white.grey-text.waves-yellow.btn.secondary-content(href='#!') Send
									.collection-item
										code.language-markup waves-orange
										a.waves-effect.white.grey-text.waves-orange.btn.secondary-content(href='#!') Send
									.collection-item
										code.language-markup waves-purple
										a.waves-effect.white.grey-text.waves-purple.btn.secondary-content(href='#!') Send
									.collection-item
										code.language-markup waves-green
										a.waves-effect.white.grey-text.waves-green.btn.secondary-content(href='#!') Send
									.collection-item
										code.language-markup waves-teal
										a.waves-effect.white.grey-text.waves-teal.btn.secondary-content(href='#!') Send
						.row
							.col.s12
								h5.light Circle
								p If you want waves to form to a non rectangular shape, there is an option for circular waves. Just add the <code class="language-markup">waves-circle</code> in addition to <code class="language-markup">waves-effect</code>
							.col.s12
								pre.language-markup.
									<code class=" language-markup">
									<span class="token tag"><span class="token tag"><span class="token punctuation">&lt;</span>a</span> <span class="token attr-name">href</span><span class="token attr-value"><span class="token punctuation">=</span><span class="token punctuation">"</span>#!<span class="token punctuation">"</span></span> <span class="token attr-name">class</span><span class="token attr-value"><span class="token punctuation">=</span><span class="token punctuation">"</span>waves-effect waves-circle waves-light btn-floating secondary-content<span class="token punctuation">"</span></span><span class="token punctuation">&gt;</span></span>
										<span class="token tag"><span class="token tag"><span class="token punctuation">&lt;</span>i</span> <span class="token attr-name">class</span><span class="token attr-value"><span class="token punctuation">=</span><span class="token punctuation">"</span>material-icons<span class="token punctuation">"</span></span><span class="token punctuation">&gt;</span></span>add<span class="token tag"><span class="token tag"><span class="token punctuation">&lt;/</span>i</span><span class="token punctuation">&gt;</span></span>
									<span class="token tag"><span class="token tag"><span class="token punctuation">&lt;/</span>a</span><span class="token punctuation">&gt;</span></span></code>
							.col.s12
								div.collection.waves-color-demo
									.collection-item
										| Default
										a(href="#!",class="waves-effect waves-circle btn-floating secondary-content")
											i.material-icons add
									.collection-item
										| waves-light
										a(href="#!",class="waves-effect waves-circle btn-floating secondary-content waves-light")
											i.material-icons add
		include ../include/footer.pug